			<groupId>ar.com.zauber.leviathan</groupId>
			<artifactId>leviathan-api-httpclient</artifactId>
			<version>0.7-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpcore</artifactId>
			<version>4.1</version>
